<resources>

    <color name="black">#000000</color>
    <color name="white">#ffffff</color>
    <color name="whitegrey">#f2f2f2</color>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="dialogLightNoTitleBar" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/whitegrey</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="dialogLightTitleBar" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/whitegrey</item>
        <item name="android:textColor">@color/black</item>
    </style>    

</resources>